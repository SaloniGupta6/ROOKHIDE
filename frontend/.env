# ChessCrypt DApp Frontend - Environment Variables
# Development Configuration

# ===========================================
# DEVELOPMENT SERVER
# ===========================================

# Frontend server port
PORT=3000

# ===========================================
# API CONFIGURATION
# ===========================================

# Backend API URL
REACT_APP_API_URL=http://localhost:8001

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================

# Ethereum network
REACT_APP_NETWORK=mainnet

# ===========================================
# WALLET CONFIGURATION
# ===========================================

# Coinbase Wallet App Name
REACT_APP_COINBASE_APP_NAME=ChessCrypt DApp

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable wallet connection
REACT_APP_ENABLE_WALLET_CONNECT=true

# Enable X402 payments
REACT_APP_ENABLE_X402_PAYMENTS=true

# Enable chess visualizer
REACT_APP_ENABLE_CHESS_VISUALIZER=true

# ===========================================
# PRODUCTION SETTINGS (Commented for Development)
# ===========================================

# Uncomment and set these for production:
# REACT_APP_API_URL=https://api.chesscrypt.com
# REACT_APP_COINBASE_APP_LOGO_URL=https://your-domain.com/logo.png
# REACT_APP_GOOGLE_ANALYTICS=GA-XXXXXXXXX
# GENERATE_SOURCEMAP=false